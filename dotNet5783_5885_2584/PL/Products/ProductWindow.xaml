<Window x:Class="PL.Products.BoProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Products"
        mc:Ignorable="d"
        Title="BoProductWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Add new Product" HorizontalAlignment="Right" Margin="0,357,33,26" Name="AddProductButton" Padding="5" Click="AddProductButton_Click"/>
        <TextBox HorizontalAlignment="Left" Margin="172,156,0,0" Name="Name" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" TextChanged="Name_TextChanged" />
        <TextBox HorizontalAlignment="Left" Margin="174,251,0,0" Name="Price" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" TextChanged="Price_TextChanged" />
        <TextBox HorizontalAlignment="Left" Margin="174,314,0,0" Name="InStock" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" TextChanged="InStock_TextChanged"/>
        <Label Content="category:" HorizontalAlignment="Left" Margin="174,175,0,0" VerticalAlignment="Top"/>
        <Label Content="name:" HorizontalAlignment="Left" Margin="174,125,0,0" VerticalAlignment="Top"/>
        <Label Content="price:" HorizontalAlignment="Left" Margin="172,225,0,0" VerticalAlignment="Top"/>
        <Label Content="instock:" HorizontalAlignment="Left" Margin="174,284,0,0" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" Margin="174,203,0,0" Name="Category" VerticalAlignment="Top" Width="180" SelectionChanged="Category_SelectionChanged" />
        <Label Content="product ID: " HorizontalAlignment="Left" Margin="171,94,0,0" Name="ID" VerticalAlignment="Top" Height="24" RenderTransformOrigin="0.496,2.07"/>

    </Grid>
</Window>
