<Window x:Class="PL.CartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource self }}"
        Title="CartWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate x:Key="orderItemTemplate" DataType="BO.OrderItem">
            <Grid>
                <Rectangle Stroke="LightBlue"  StrokeDashArray="1" Height="50" Width="50" Margin="0,0,10,0" />
                <TextBlock Text="{Binding Path=ProductName}"></TextBlock>
            </Grid>

        </DataTemplate>
    </Window.Resources>
    <Grid>
        <ItemsControl ItemsSource="{Binding Items}" HorizontalAlignment="Center" VerticalAlignment='Center' ItemTemplate="{StaticResource orderItemTemplate}">

        </ItemsControl>
        <Button Content="confirm order" Click="ConfirmOrder_Click" HorizontalAlignment="Left" Width="210" Margin="590,386,0,0"/>
    </Grid>
</Window>
